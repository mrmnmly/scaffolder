<template name="newStudentTemplate">
	<form id="newStudentForm">
		<div class="controls">
			<label for="age">age</label>
			<input id="age" type="number" name="age">
		</div>
		<div class="controls">
			<label for="first_name">first_name</label>
			<input id="first_name" type="text" name="first_name">
		</div>
		<div class="controls">
			<label for="last_name">last_name</label>
			<input id="last_name" type="text" name="last_name">
		</div>
		<div class="controls">
			<label for="birth">birth</label>
			<input id="birth" type="date" name="birth">
		</div>
		<div class="controls">
			<label for="cv">cv</label>
			<textarea id="cv" name="cv"></textarea>
		</div>
		<div class="controls">
			<label for="note">note</label>
			<input id="note" type="number" name="note">
		</div>
		<input type="submit" value="submit" class="button">
	</form>
</template>

<template name="editStudentTemplate">
	<form id="editStudentForm">
		<div class="controls">
			<label for="age">age</label>
			<input id="age" type="number" name="age" value="{{ this.age }}">
		</div>
		<div class="controls">
			<label for="first_name">first_name</label>
			<input id="first_name" type="text" name="first_name" value="{{ this.first_name }}">
		</div>
		<div class="controls">
			<label for="last_name">last_name</label>
			<input id="last_name" type="text" name="last_name" value="{{ this.last_name }}">
		</div>
		<div class="controls">
			<label for="birth">birth</label>
			<input id="birth" type="date" name="birth" value="{{ this.birth }}">
		</div>
		<div class="controls">
			<label for="cv">cv</label>
			<textarea id="cv" name="cv" value="{{ this.cv }}"></textarea>
		</div>
		<div class="controls">
			<label for="note">note</label>
			<input id="note" type="number" name="note" value="{{ this.note }}">
		</div>
		<input type="submit" value="submit" class="button">
	</form>
</template>

<template name="studentListTemplate">
	<a href="{{pathFor 'newStudentView'}}">New Student</a>
	<table>
		<thead>
			<tr>
				<th>id</th><th>action</th>
			</tr>
		</thead>
		<tbody>
			{{#each studentList}}
				<tr>
					<td>this._id</td><td><a href="{{pathFor 'editStudentView'}}" class="button">Edit</a><a href="#" class="removeButton button">Remove</a></td>
				</tr>
			{{/each}}
		</tbody>
	</table>
</template>


